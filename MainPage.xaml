<Page
    x:Class="WeatherWiki.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherWiki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:WeatherWiki.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!--MASTER-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="275*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--BACKGROUND GRADIENT FOR APP-->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.1,1" StartPoint="0.5,0">
                <GradientStop Color="DodgerBlue" Offset="0"/>
                <GradientStop Color="LightBlue" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!--HEADER-->
        <Grid Margin="0,0,0,550" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center"
                        Margin="0, 20, 0, 0">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                              Glyph="&#xE71E;"
                              Margin="0, 0, 10, 0"/>

                    <TextBox FontSize="20"
                             x:Name="user_input"
                             Background="white"
                             PlaceholderText="Enter city"
                             KeyDown="Search_City"
                             Width="280"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock x:Name="error_message" 
                               HorizontalAlignment="Right"
                               Foreground="White"
                               Text=" "/>
                </StackPanel>
            </StackPanel>

            <TextBlock Foreground="Black"
                       Grid.Column="1"
                       FontSize="35"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
            WeatherWiki
            </TextBlock>

            <TextBlock Foreground="Black"
                       Grid.Column="2"
                       FontSize="10"
                       HorizontalAlignment="Right"
                       Margin="0, 20, 20, 0"
                       >
                version 1.0.0-prerelease-a
            </TextBlock>
        </Grid>

        <!--MAIN-->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!--CURRENT WEATHER-->
            <Grid Grid.Row="0">
                <uc:CurrentWeather x:Name="CurrentWeatherComponent"
                                   HorizontalAlignment="Center"/>
            </Grid>

            <!--FORECAST-->
            <Grid Grid.Row="2">
                <uc:Forecast x:Name="ForecastWeatherComponent" 
                             HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Page>