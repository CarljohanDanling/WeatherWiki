<Page
    x:Class="WeatherWiki.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherWiki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:WeatherWiki.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!--MASTER-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--BACKGROUND GRADIENT FOR APP-->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.1,1" StartPoint="0.5,0">
                <GradientStop Color="DodgerBlue" Offset="0"/>
                <GradientStop Color="LightBlue" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!--HEADER-->
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                            Margin="40, 0, 0, 0">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE71E;"
                              Margin="0, 0, 10, 0"/>

                    <TextBox FontSize="20" 
                             Background="white"
                             PlaceholderText="Enter city"
                             Width="280"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Foreground="Black"
                       Grid.Column="1"
                       FontSize="35"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
            WeatherWiki
            </TextBlock>

            <TextBlock Foreground="Black"
                       Grid.Column="2"
                       FontSize="10"
                       HorizontalAlignment="Right"
                       Margin="0, 20, 20, 0"
                       >
                version 1.0.0-prerelease-a
            </TextBlock>
        </Grid>

        <!--MAIN-->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--CURRENT WEATHER-->
            <Grid Grid.Row="0" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--CITY NAME-->
                <TextBlock FontSize="35"
                           Foreground="white"
                           HorizontalAlignment="Center">Skövde</TextBlock>

                <!--CONDITION, TEMPERATUR & METRIC-->
                <StackPanel Grid.Row="1" Orientation="Horizontal">

                    <Image Grid.Column="0" 
                           Source="/Images/WeatherState/a03d.png" 
                           Height="70"/>

                    <TextBlock Grid.Column="1"
                               FontSize="70"
                               Foreground="white">    
                        -2˚
                    </TextBlock>

                    <TextBlock Grid.Column="2"
                               FontSize="25"
                               Foreground="white"
                               Margin="12">
                        C
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="3">
                    <TextBlock Foreground="White"
                               FontSize="20"
                               HorizontalAlignment="Center">
                        Light snow
                    </TextBlock>

                    <TextBlock Foreground="White"
                               HorizontalAlignment="Center"
                               Padding="0, 5, 0 ,0">
                        Updated on
                    </TextBlock>
                </StackPanel>
                
            </Grid>

            <!--FORECAST-->
            <Grid Grid.Row="1">
                <uc:Forecast HorizontalAlignment="Center"/>
                
            </Grid>
        </Grid>
    </Grid>
</Page>